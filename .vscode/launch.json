{
  "version": "0.2.0",
  "launch": {
    "configurations": ["run dev", "run build"]
  },
  "configurations": [
    {
      "name": "run dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "run build",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "build"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
