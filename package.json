{
  "name": "omnibot3000",
  "x-display-name": "OMNIBOT 3000",
  "description": "your omniscient source of truth",
  "private": false,
  "version": "1.9.6",
  "type": "module",
  "author": {
    "name": "rez",
    "email": "rez@lol.pm",
    "url": "https://github.com/chiptune"
  },
  "homepage": "https://www.omnibot3000.com",
  "repository": {
    "url": "https://github.com/chiptune/omnibot3000",
    "type": "github"
  },
  "bin": {
    "omnibot": "./bin/omnibot.js"
  },
  "scripts": {
    "start": "pnpm run-p start:dev start:api",
    "start:dev": "pnpm run dev",
    "start:api": "nodemon api/server.ts",
    "start:prod": "pnpm run build && pnpm run-p prod api",
    "dev": "vite",
    "prod": "vite preview --port 4173",
    "api": "node dist/api/server.js",
    "build": "pnpm run build:client && pnpm run build:api",
    "build:client": "tsc -b && vite build",
    "build:api": "tsc --project tsconfig.api.json",
    "lint": "eslint --fix .",
    "prettify": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@mistralai/mistralai": "^1.11.0",
    "openai": "^6.16.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "classnames": "^2.5.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.0",
    "react-refresh": "^0.18.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.4"
  }
}
